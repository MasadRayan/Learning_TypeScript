{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./output",

    // Environment Settings
    "module": "esnext",
    "target": "esnext",

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "skipLibCheck": true
  }
}